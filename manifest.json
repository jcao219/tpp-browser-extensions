{
    "manifest_version": 2,
    "content_scripts": [ {
        "js":               [ "chrome_inject.js"],
        "matches":          [   "*://www.twitch.tv/twitchplayspokemon",
                                "*://www.twitch.tv/twitchplayspokemon/"  ],
        "run_at": "document_end"
    } ],
    "permissions": [
          "storage"
    ],
    "options_page": "chrome_options.html", 
    "web_accessible_resources": ["chat_stats.user.js", "chat_filter.user.js"],
    "description":  "Two handy scripts: a multifunctional chat filter and an instant statistics panel.",
    "name":         "TwitchPlaysPokemon Chrome Extensions",
    "short_name":   "TPP Chrome Extensions",
    "version":      "1.4"
}
